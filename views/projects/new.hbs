<div class="container">

  <h1>Create new proyect</h1>

  <form action="/projects" method="POST">
    <div class="form-floating mb-3">
      <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="name" placeholder="Your project name">
      <label for="floatingInput">Project Name</label>
      {{#if errors.name}}
        <div class="invalid-feedback">
          {{errors.name.message}}
        </div>
      {{/if}}
    </div>


    <div class="form-floating mb-3">
      <input type="text" class="form-control {{#if errors.description}}is-invalid{{/if}}" id="description" placeholder="Describe your project">
      <label for="description">Description</label>
      {{#if errors.description}}
        <div class="invalid-feedback">
          {{errors.description.message}}
        </div>
      {{/if}}
    </div>

    <div class="mb-3">
      <label for="formFile" class="form-label">Project image</label>
      <input class="form-control {{#if errors.image}}is-invalid{{/if}}" type="file" id="image">
      {{#if errors.image}}
        <div class="invalid-feedback">
          {{errors.image.message}}
        </div>
      {{/if}}
    </div>

  <!-- TO DO: location input -->

  <select class="form-select mb-3 {{#if errors.location}}is-invalid{{/if}}" aria-label="Default select example" id="location">
    <option selected>Choose</option>
    <option value="Remote">Remote</option>
    <option value="Local">Local</option>
      {{#if errors.location}}
        <div class="invalid-feedback">
          {{errors.location.message}}
        </div>
      {{/if}}
  </select>

  <div class="form-floating mb-3">
    <input type="text" class="form-control {{#if errors.weeks}}is-invalid{{/if}}" id="weeks" placeholder="Set the duration">
    <label for="weeks">Weeks of development</label>
    {{#if errors.weeks}}
        <div class="invalid-feedback">
          {{errors.weeks.message}}
        </div>
      {{/if}}
  </div>

  <div>
    <label for="devLanguages mb-3" class="form-label">Programming languages</label>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="JavaScript">
      <label class="form-check-label" for="JavaScript">JavaScript</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="HTML">
      <label class="form-check-label" for="HTML">HTML</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="CSS">
      <label class="form-check-label" for="CSS">CSS</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="PHP">
      <label class="form-check-label" for="PHP">PHP</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="Python">
      <label class="form-check-label" for="Python">Python</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="Java">
      <label class="form-check-label" for="Java">Java</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="C#">
      <label class="form-check-label" for="C#">C#</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="C++">
      <label class="form-check-label" for="C++">C++</label>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Create</button>

  </form>
</div>