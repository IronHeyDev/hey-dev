<div class="container row mx-auto justify-content-center pt-25 mb-4" style="width: 100%;">
  <div class="col-12 col-md-12 row justify-content-center">
     <h1 class="fs-25 mt-4">My messages</h1>
  </div>
</div>

 {{#each currentUser.adquiredChats as | chat | }}
 <a class="text-secondary text-decoration-none" href="users/{{chat.id}}/chat">
<div class="mb-3 d-flex align-items-center flex-column mb-4 border-top border-bottom">
  <div class="d-flex mb-2 align-items-center justify-content-center"  style="width: 80%;">
      <img class="rounded-circle mt-2" src="{{chat.avatar}}" alt="profile" width="60px" height="60px">
      <h3 class="pl-20 fw-bold mt-4 ps-5">{{chat.name}} {{chat.surname}} (@{{chat.alias}})</h3>
  </div>
</div>
</a>
{{/each}}
<div class="mb-5">
</div>
