<section class="latest-projects p-5">
  <div class="container">
    <h2 class="pb-3 text-center">Latest projects</h2>
    <div class="row align-items-stretch">
      {{#each projects as |project|}}
        <div class="col-sm-12 col-lg-4 text-center p-3">
          <div class="home-project d-flex flex-column justify-content-between p-3 h-100 text-body-secondary">
            <img src="{{project.image}}" alt="{{project.name}}" class="w-100">
            <h4 class="text-body-secondary">{{project.name}}</h4>
            <div class="d-flex flex-row flex-wrap py-4 px-5 justify-content-around">
              {{#each project.devLanguages as |devLanguage|}}
                {{{languageIcon devLanguage}}}
              {{/each}}
            </div>
            <a href="/projects/{{project.id}}" class="btn second-button w-100">More info</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

