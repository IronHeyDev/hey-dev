<div class="container div-flex-row justify-content-around form-page">


  {{#if error}} <div class="alert alert-danger"> Login failed, please make sure the email and passwords are correct
  </div>{{/if}}

 <div class="signup-form">
  <form action="/login" method="POST">
  <h1>Log In</h1>
    <div class="form-floating mb-3">
      <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email" name="email"
        value="{{email}}" placeholder="Email">
      <label for="email">Email</label>
      {{#if errors.email}}
      <div class="invalid-feedback">
        {{errors.email}}
      </div>
      {{/if}}
    </div>

    <div class="form-floating mb-3">
      <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password" name="password"
        value="{{req.body.password}}" placeholder="password">
      <label for="password">Password</label>
      {{#if errors.password}}
      <div class="invalid-feedback">
        {{errors.password}}
      </div>
      {{/if}}
    </div>
    <button type="submit" class="btn second-button">Log In</button>
    <div class="mt-4">
      <p>You don't have an account yet? <a href="/signup">Take me to Sign up</a></p>
    </div>
  </form>
  </div>
</div>